rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user role
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    // Helper function to check if user is moderator or admin
    function isModeratorOrAdmin() {
      return isAuthenticated() && (getUserRole() == 'moderator' || getUserRole() == 'admin');
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - users can read their own profile, admins can read all
    match /users/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (
        // Users can update their own profile (except role)
        (isOwner(userId) && !('role' in request.resource.data.diff(resource.data))) ||
        // Admins can update any profile including role
        isAdmin()
      );
      allow delete: if isAdmin();
    }
    
    // Meal Plans collection - role-based access
    match /mealPlans/{planId} {
      // Helper to check if user owns the plan
      function isPlanOwner() {
        return isAuthenticated() && resource.data.userId == request.auth.uid;
      }
      
      // Helper to safely check if user is admin (doesn't fail if profile doesn't exist)
      function isAdminSafe() {
        return isAuthenticated() && 
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
      
      // Read: Allow authenticated users to read plans
      // Collaborator access is verified in application code (getMealPlanById)
      // This allows the app to check collaborator status before returning data
      allow read: if isAuthenticated();
      
      // List/Query: Allow users to query plans
      allow list: if isAuthenticated() && 
        request.query.limit <= 100;
      
      // Create: Any authenticated user can create their own meal plan
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.isCustom == true;
      
      // Update: Allow authenticated users to update
      // Permission checks (owner, admin, collaborator) are handled in application code
      allow update: if isAuthenticated();
      
      // Delete: Users can delete their own plans, admins can delete any
      allow delete: if isAuthenticated() && (
        isPlanOwner() || 
        isAdminSafe()
      );
    }
    
    // Recipes collection (if you add one later)
    match /recipes/{recipeId} {
      allow read: if true; // Public read
      allow create: if isAuthenticated() && (
        isModeratorOrAdmin() ||
        request.resource.data.userId == request.auth.uid
      );
      allow update: if isAuthenticated() && (
        isModeratorOrAdmin() ||
        (isOwner(resource.data.userId) && !('userId' in request.resource.data.diff(resource.data)))
      );
      allow delete: if isAuthenticated() && (
        isAdmin() ||
        (isModeratorOrAdmin() && isOwner(resource.data.userId))
      );
    }
    
    // Saved Meals collection
    match /savedMeals/{savedMealId} {
      // Users can only read/write their own saved meals
      allow read, write: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

